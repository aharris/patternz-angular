@import "../../bower_components/bootstrap-stylus/bootstrap/variables"

//Mixins
transition(val)
  -webkit-transition val
  transition val

//Pattern Library Styles
.pz-nav
    position fixed
    height 100%
    left 0
    top 0
    width 265px
    padding 15px
    transform translate3d(-265px,0,0)

.pz-menu-icon
    position absolute
    left 15px
    top 18px
    cursor pointer
    &.pz-nav-active
        span
            background $brand-danger
            &:first-child
              transform rotate3d(0,0,1,45deg) translate3d(5px,6px,0)
            &:nth-child(2)
                opacity 0
            &:last-child
                transform rotate3d(0,0,1,-45deg) translate3d(5px,-6px,0)

    span
        background $brand-primary
        border-radius 4px
        display block
        height 4px
        width 25px
        margin-bottom 4px
        transition(all 200ms)

.wrapper
  transition(all 200ms)
  &.pz-nav-active
    transform translate3d(265px,0,0)

.color-swatch
    text-align center
    line-height 60px
    width 100%
    color $gray-lighter

.pz-group-header,
.pz-pattern-header
    text-transform capitalize




@media (min-width $screen-sm-min)
    .color-swatch
        line-height 100px

